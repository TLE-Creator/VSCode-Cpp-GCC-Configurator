{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe generates active files",
            "command": "<path_to_g++.exe>(Needs to be modified)",
            "args": [
                "-g",
                "-std=c++14",
                "-O2",
                "-Wall",
                "-fdiagnostics-color=always",
                "${file}",
                "-o",
                "${fileDirname}\\\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Compiler: <path_to_g++.exe>(Needs to be modified)"
        }
    ],
    "version": "2.0.0"
}
